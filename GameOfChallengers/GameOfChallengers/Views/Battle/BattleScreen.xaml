                              VerticalOptions="Center" 
                              HorizontalOptions="Center" />
                    </StackLayout>

                       

                        <StackLayout Grid.Row="2" Grid.Column="0">
                        <BoxView Color="CornflowerBlue"
                              WidthRequest="30"
                              HeightRequest="30"
                              VerticalOptions="Center" 
