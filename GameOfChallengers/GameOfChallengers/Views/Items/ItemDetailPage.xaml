<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="GameOfChallengers.Views.Items.ItemDetailPage">
	<ContentPage.Content>
    <ScrollView>
    <StackLayout Spacing="20" Padding="15">

        <Label Text="Item Detail Page" FontSize="Small" />

        <Label Text="Name:" FontSize="Small" />
        <Label Text="{Binding Data.Name}" FontSize="Small"/>
        <Label Text="Attribute:" FontSize="Small" />
        <Label Text="{Binding Data.Attribute}" FontSize="Small"/>
        <Label Text="Value:" FontSize="Small" />
        <Label Text="{Binding Data.Value}" FontSize="Small"/>
        <Label Text="Location:" FontSize="Small" />
        <Label Text="{Binding Data.Location}" FontSize="Small"/>
        <Label Text="Range:" FontSize="Small" />
        <Label Text="{Binding Data.Range}" FontSize="Small"/>
    </StackLayout>
             <StackLayout Orientation="Vertical" Padding="16,40,16,40" Spacing="10">
                <Button  
                    Text="Edit" 
                    Clicked="Edit_Clicked" 
                    HorizontalOptions="Center"
                    TextColor="Black" />

             <Button  
                    Text="Delete" 
                    Clicked="Delete_Clicked" 
                    HorizontalOptions="Center"
                    TextColor="Black" />
                </StackLayout>
        </ScrollView>
	</ContentPage.Content>
</ContentPage>
