<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GameOfChallengers.Views.SignInPage">
	<ContentPage.Content>
       <StackLayout Orientation="Vertical" Padding="16,40,16,40" Spacing="10">
            <Image 
            Source="logo.jpeg" 
            VerticalOptions="Center" 
            HeightRequest="150"
            HorizontalOptions="Fill"/>

            
               
             <Entry x:Name="name"  
                    Text="Enter Your Name" 
                    FontSize="Medium"
                    Completed="signin_done"/>
           <Button  
                    Text="Start" 
                    Clicked="StartGame_Command" 
                    HorizontalOptions="Center"
                    TextColor="Crimson"
                     HeightRequest ="50"
                     WidthRequest =" 100"/>
            
           <Label BindingContext="{x:Reference name}"
               FontAttributes="Bold"
               FontSize="Large"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />

        </StackLayout>
	</ContentPage.Content>
</ContentPage>
