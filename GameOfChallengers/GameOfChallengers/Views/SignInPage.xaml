<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GameOfChallengers.Views.SignInPage">
	<ContentPage.Content>
       <StackLayout Orientation="Vertical" Padding="16,40,16,40" Spacing="10">
                <Label FontSize="22">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="War Of Ages" FontAttributes="Bold" FontSize="30" />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
             <Entry x:Name="name"  Text="Enter Your Name" FontSize="Medium" />
            <Button  
                    Text="Start" 
                    Clicked="StartGame_Command" 
                    HorizontalOptions="Center"
                    TextColor="Black" />
            </StackLayout>
	</ContentPage.Content>
</ContentPage>
