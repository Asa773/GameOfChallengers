<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="GameOfChallengers.Views.GameHomePage"
    Title="Game">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Help" Clicked="Help_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Orientation="Vertical" Padding="16,40,16,40" Spacing="10" VerticalOptions="CenterAndExpand">
                <Label FontSize="22" VerticalOptions="CenterAndExpand">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="War Of Ages" FontAttributes="Bold" FontSize="30"  />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Button  
                    Text="Play" 
                    Clicked="Play_Command" 
                    HorizontalOptions="Center"
                    TextColor="Black" />

                <Button  
                    Text="Auto Battle" 
                    Clicked="AutoBattle_Command" 
                    HorizontalOptions="Center"
                    TextColor="Black" />
                
                <Button  
                    Text="Characters" 
                    Clicked="Characters_Command" 
                    HorizontalOptions="Center"
                    TextColor="Black" />

                <Button  
                    Text="Monsters" 
                    Clicked="Monsters_Command" 
                    HorizontalOptions="Center"
                    TextColor="Black" />

                <Button  
                    Text="Items" 
                    Clicked="Items_Command" 
                    HorizontalOptions="Center"
                    TextColor="Black" />

                <Button  
                    Text="Scores" 
                    Clicked="Scores_Command" 
                    HorizontalOptions="Center"
                    TextColor="Black" />
                <Button  
                    Text="About" 
                    Clicked="About_Clicked" 
                    HorizontalOptions="Center"
                    TextColor="Black" />
            </StackLayout>
            </ScrollView>
	</ContentPage.Content>
</ContentPage>
