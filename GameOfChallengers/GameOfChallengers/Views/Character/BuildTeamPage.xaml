<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"

            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
            x:Class="GameOfChallengers.Views.Character.BuildTeamPage">


    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Character Team" HorizontalOptions="CenterAndExpand"></Label>

                <Picker Title="Select 6 Characters" 
                        ItemsSource="{Binding Dataset}"
                        x:Name="CharacterPicker1"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding Data.Name, Mode=TwoWay}" />
                <Picker 
                        ItemsSource="{Binding Dataset}"
                        x:Name="CharacterPicker2"
                    ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding Data.Name, Mode=TwoWay}" />
                <Picker 
                        ItemsSource="{Binding Dataset}"
                        x:Name="CharacterPicker3"
                    ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding Data.Name, Mode=TwoWay}" />
                <Picker 
                        ItemsSource="{Binding Dataset}"
                        x:Name="CharacterPicker4"
                    ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding Data.Name, Mode=TwoWay}" />
                <Picker 
                        ItemsSource="{Binding Dataset}"
                        x:Name="CharacterPicker5"
                    ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding Data.Name, Mode=TwoWay}" />
                <Picker 
                        ItemsSource="{Binding Dataset}"
                        x:Name="CharacterPicker6"
                    ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding Data.Name, Mode=TwoWay}" />


                <Button Text="Save Selected Characters as the Team" Clicked="SaveTeam_Clicked" />
                <Button Text="Auto Select" Clicked="AutoSelect_Clicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>


