<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           
             x:Class="GameOfChallengers.Views.Character.BuildTeamPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Character Team" HorizontalOptions="CenterAndExpand"></Label>
                <ListView x:Name="ItemsListView" 
                 ItemSelected="OnItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Padding="10">
                    <Label Text="Character 1" Grid.Row="0" Grid.Column="0" />
                    <Label Text="Character 2" Grid.Row="0" Grid.Column="1" />
                    <Label Text="Character 3" Grid.Row="0" Grid.Column="2" />
                    <Label Text="Character 4" Grid.Row="1" Grid.Column="0" />
                    <Label Text="Character 5" Grid.Row="2" Grid.Column="0" />
                    <Label Text="Character 6" Grid.Row="1" Grid.Column="1" />
                    <Label Text="Character 7" Grid.Row="1" Grid.Column="2" />
                    <Label Text="Character 8" Grid.Row="2" Grid.Column="1" />
                    <Label Text="Character 9" Grid.Row="2" Grid.Column="2" />
                    <Label Text="Character 10" Grid.Row="3" Grid.Column="1" />
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                    
                        <Button Text="Save Selected Characters as the Team" Clicked="SaveTeam_Clicked" />
                <Button Text="Auto Select" Clicked="AutoSelect_Clicked" />
            
                    </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

