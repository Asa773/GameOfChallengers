<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameOfChallengers.Views.Character.BuildTeamPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Character Team" HorizontalOptions="CenterAndExpand"></Label>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackLayout Grid.Row="0" Grid.Column="5">
                        <BoxView Color="CornflowerBlue"
                                 VerticalOptions="Center" 
                             HorizontalOptions="Center"/>
                        <!--<Image Source="icon.png"></Image>-->


                    </StackLayout>
                    <!--<Label Text="Top Left" Grid.Row="0" Grid.Column="0" />
                    <Label Text="Top Right" Grid.Row="0" Grid.Column="1" />
                    <Label Text="Bottom Left" Grid.Row="1" Grid.Column="0" />
                    <Label Text="Bottom Right" Grid.Row="1" Grid.Column="1" />-->
                    <StackLayout Grid.Row="0" Grid.Column="0">
                        <Image Source="icon.png"  />
                        
                    </StackLayout>

                    <StackLayout  Grid.Row="0" Grid.Column="1">
                        <Image Source="icon.png"/>
                    </StackLayout>
                    <StackLayout  Grid.Row="1" Grid.Column="0">
                        <Image Source="icon.png"/>
                    </StackLayout>
                    <StackLayout  Grid.Row="1" Grid.Column="1">
                        <Image Source="icon.png"/>
                    </StackLayout>
                    <Image Source="icon.png"  Grid.Row="0" Grid.Column="1" />
                    <Image Source="icon.png" Grid.Row="1" Grid.Column="0" />
                    <Image Source="icon.png" Grid.Row="1" Grid.Column="1" />
                </Grid>
                <Button Text="Save Selected Characters as the Team" Clicked="SaveTeam_Clicked" />
                <Button Text="Auto Select" Clicked="AutoSelect_Clicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>